<!--================================================================
    This one was the original URDF description of the robot, but now
it's just an additional file to make tests in the model, or
implement other plugins and sensors that are not currently
in the main project 
===================================================================-->

<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>    
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 0.8"/>
    </material>
    
    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <!-- ==========================CHASSI-->

    <!-- base link -->
    <link name="base_link">
    </link>

    <!-- chassi link -->
    <link name="chassi_link">
        <visual>
            <orign xyz="0.7 0 0.04 " rpy="0 0 0"/>
            <geometry>
                <box size="0.14 0.15 0.04"/>
            </geometry>
            <material name='white'/>
        </visual>
        <collision>
            <orign xyz="0.7 0 0.04 " rpy="0 0 0"/>
            <geometry>
                <box size="0.14 0.15 0.04"/>
            </geometry>        
        </collision>
        <xacro:inertial_box mass="1" x="0.14" y="0.15" z="0.04">
            <orign xyz="0.7 0 0.04 " rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassi_link">
        <material>Gazebo/White</material>
    </gazebo>


    <!-- chassi joint -->
    <joint name="chassi_joint" type='fixed'>
        <parent link="base_link"/>
        <child link="chassi_link"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <!-- ========================== BACK LEFT WHEEL -->
    
    <!-- back left wheel link -->
    <link name="back_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.06"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.075" radius="0.03" length="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="back_left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- back left wheel joint -->
    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="chassi_link"/>
        <child link="back_left_wheel"/>
        <origin xyz="0 0.045 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- =========================== BACK RIGHT WHEEL -->

    <!-- back right wheel link -->
    <link name="back_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.06"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.075" radius="0.03" length="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="back_right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- back right wheel joint -->
    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="chassi_link"/>
        <child link="back_right_wheel"/>
        <origin xyz="0 -0.045 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <!-- ========================== FRONT LEFT WHEEL -->
    
    <!-- front left wheel link -->
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.06"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.075" radius="0.03" length="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- front left wheel joint -->
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="chassi_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="-0.2 0.045 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- =========================== FRONT RIGHT WHEEL -->

    <!-- front right wheel link -->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.06"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.075" radius="0.03" length="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- front right wheel joint -->
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="chassi_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="-0.2 -0.045 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>


</robot>